@page "/text-display"
@rendermode InteractiveServer
<h3>Text Display Example</h3>

<label for="inputText">Enter some text:</label>
<input id="inputText" @bind="InputText" @bind:event="oninput" class="form-control" />

<p>You typed: <strong>@InputText</strong></p>

@code {
    private string InputText = string.Empty;
}
